<domain type='kvm'>
  <name>vm</name>
  <memory>3562144</memory>
  <currentMemory>1528144</currentMemory>
  <vcpu>1</vcpu>
  <os>
    <type arch='x86_64'>hvm</type>
    <boot dev='cdrom'/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <clock offset='utc' />
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/bin/qemu-kvm</emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw' cache='writeback' io='native' />
      <source file='/srv/vm/vm.img'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw' cache='none' />
      <source file='/srv/vm/vm.swap'/>
      <target dev='vdb' bus='virtio'/>
    </disk>
    <disk type='file' device='cdrom'>
      <driver name='qemu' />
      <source file='/srv/vm/ubuntu.iso' />
      <target dev='hda' bus='ide' />
      <readonly/>
    </disk>
    <input type='tablet' bus='usb'/>
<!--    <interface type='bridge'>
      <mac address='52:54:00:2b:40:6' />
      <source bridge='red'/>
      <model type='virtio' />
    </interface>-->
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target port='0'/>
    </console>
    <graphics type='vnc' keymap='fr' listen='127.0.0.1' port='5900' />
  </devices>
</domain>

